{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
      "src/main.tsx",
      "src/App.tsx",
      "src/components/**/*",
      "src/features/**/*",
      "src/hooks/**/*",
      "src/lib/**/*",
      "src/stores/**/*",
      "src/vite-env.d.ts"
  ],
  "exclude": [
      "src/api/**/*",
      "src/components/NervePanel.tsx",
      "src/components/PricingCards/**/*",
      "src/components/SovereignHUD.tsx",
      "src/components/SystemPulse/**/*"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
