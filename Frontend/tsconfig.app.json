{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/App.tsx",
    "src/main.tsx",
    "src/vite-env.d.ts",
    "src/components/**/*",
    "src/pages/**/*",
    "src/features/**/*",
    "src/hooks/**/*",
    "src/lib/**/*",
    "src/api/client.ts",
    "src/assets/**/*",
    "src/utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/modules",
    "src/omni_core",
    "src/security_core",
    "src/nerve-center",
    "src/agents",
    "src/ai",
    "src/biology",
    "src/chronos",
    "src/core",
    "src/events",
    "src/ghost",
    "src/guardians",
    "src/healing",
    "src/intelligence",
    "src/math",
    "src/physics",
    "src/reality",
    "src/reporter",
    "src/security",
    "src/storage",
    "src/swarm",
    "src/synthesis",
    "src/validation",
    "src/visual"
  ]
}
